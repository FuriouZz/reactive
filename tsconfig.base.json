{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    "lib": ["es2020", "dom"],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
