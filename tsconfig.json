{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "declaration": true,
    "moduleResolution": "Node16",
    "lib": ["es2020", "dom"],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build"
  },
  "include": ["./lib/**/*"]
}
