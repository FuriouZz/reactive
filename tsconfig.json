{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "lib": [
      "dom",
      "es6"
    ],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "./lib/**/*"
  ]
}
